package com.bridgelabz.logicalProgramming;

import java.util.Arrays;
import java.util.InputMismatchException;
import java.util.Scanner;

import com.bridgelabz.utility.Utility; 


public class TicTacToe {
	
	public static void main(String[] args) {
		char[][] playBoard=new char [3][3];
		playBoard=printBoard(playBoard);
		for(int i=0;i<=2;i++)
		{
			for(int j=0;j<=2;j++)
			{
				System.out.print(playBoard[i][j]+" ");
			}
			System.out.println();
		}
		System.out.println("User Turn  --- user symbol is X");
		
		
	 }
	
	
	public static char[][] printBoard(char [][]playBoard) {
		
		System.out.println("Welcome");
		for(int i=0;i<=2;i++)
		{
			for(int j=0;j<=2;j++)
			{
				playBoard[i][j]='-';
			}
		}
		
		
		
		return playBoard;
		
		
}
	public static char[][] userTurn(char[][] playBoard){
		
		System.out.println("Enter the co ordinates");
		int x=Utility.readInteger();
		int y=Utility.readInteger();
		playBoard[x][y]='X';
		
		return null;
	
	
}
}