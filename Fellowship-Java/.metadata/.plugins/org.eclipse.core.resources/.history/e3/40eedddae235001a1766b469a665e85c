package com.bridgelabz.dataStructures;

public class LinkedList {
	Node head;
	
	public static void main(String[] args) {
		LinkedList list=new LinkedList();
		list.insert(5);
		list.insert(5);
		list.insert(5);
		list.show();
	}
	public static void main(String[] args) {
		LinkedList list=new LinkedList();
		list.insert(6);
		list.insert(8);
		list.insert(10);
		list.insert(14);
		list.insertAtStart(25);
		list.show();
		list.insertAt(3, 0);
		list.show();
		System.out.println("actual");
		list.length();
		list.deleteAtStart();
		System.out.println("after deletion");
		list.show();
	}
	
	public void insert(int data)
	{
		Node node =new Node();
		node.data=data;
		node.next=null;
				
		if(head==null)
		{
			head=node;
		}
		else
		{
			Node n=head;
			while(n.next!=null)
			{
				n=n.next;
			}
			n.next=node;
		}
	}
	
	public void insertAtStart(int data)
	{
		Node node=new Node();
		node.data=data;
		node.next=null;
		node.next=head;
		head=node;
	}
	
	public void insertAt(int index,int data)
	{
		Node node=new Node();
		node.data=data;
		node.next=null;
		Node n=head;
		for(int i=0;i<index-1;i++)
		{
			n=n.next;
		}
		node.next=n.next;
		n.next=node;
	}
	
	public void length()
	{int count=0;
		Node n=head;
		while(n.next!=null)
		{
			count=count+1;
			
			n=n.next;
		}
		System.out.println(count+1);
	}
	
	public void deleteAtStart()
	{
		head=head.next;
	}
	
	public void show()
	{
		Node node=head;
		while(node.next!=null)
		{
			System.out.println(node.data);
			node=node.next;
		}
		System.out.println(node.data);
	}
	
	}
	

}
