package com.bridgelabz.junitProgramming;

import java.util.ArrayList;

import com.bridgelabz.utility.Utility;

public class ToBinary {
	public static void main(String[] args) {
		System.out.println("Enter decimal number to convert to binary");
		int number=Utility.readInteger();
		StringBuffer result=new StringBuffer();
		result=decimalToBinary(number);
		System.out.println(result);
		
		
		
		
	}
	
	public static StringBuffer decimalToBinary(int number)
	{
		StringBuffer binary=new StringBuffer();
		
		
		int bit=0;
		while(number>=1)
		{
			bit=number%2;
			String value=String.valueOf(bit);
			binary.append(bit);
			
		}
		binary.reverse();
		
		return binary;
	}

}
