package com.bridgelabz.algorithmicProgramming;


import java.io.File;
import java.io.FileReader;
import java.io.IOException;
import java.io.BufferedReader;



public class BinarySearchFromFile {
	
	public static void main(String[] args) throws IOException {
		String file=readFile();
		boolean flag=findWord(file);
		
	}
	
	public static String readFile() 
	{
		String st = null;
		try {
		
		File file = new File("/home/admin1/fellowship/search.text"); 
		  
		BufferedReader br = new BufferedReader (new FileReader(file)); 
		while ((st = br.readLine()).strip().trim() != null) {
		    System.out.println(st); 
		  } 
		System.out.println(st);
		}
		catch(Exception e)
		{
			e.printStackTrace();
		}
		
		return st;
	}
	
	public static boolean findWord(String file)
	{
		String [] words=file.split("");
		for(int i=0;i<words.length;i++)
		{
			System.out.println(words[i]);
		}
		System.out.println(words);
		
		return false;
	}

}
